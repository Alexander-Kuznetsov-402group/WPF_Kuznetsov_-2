            <Button Content="Закрыть" Click="Button_Click" MouseEnter="Button_MouseEnter_5" MouseLeave="Button_MouseLeave_5" />
        </ToolBar>
        <StatusBar Margin="289,0,0,439" x:Name="StatusBar">
            <TextBlock Text="" x:Name="TextBlock" />
        </StatusBar>
    </Grid>
