        <Slider Height="25" Width="100" Minimum="1" Maximum="100" Value="20" Margin="552,105,140,289" />
        <ComboBox SelectedIndex="1"  FontFamily="Times New Roman" FontSize="16" Margin="85,96,532,289">
            <ComboBoxItem x:Name="C1" Content="Красный" />
            <ComboBoxItem x:Name="C2" Content="Зеленый" />
            <ComboBoxItem x:Name="C3" Content="Синий" />
        </ComboBox>
        <RadioButton GroupName="redact" Content="Рисование" Width="100" Height="20" Margin="85,202,607,197"/>
        <RadioButton x:Name="b1" GroupName="redact" Content="Ластик" Width="100" Height="20" Margin="85,227,607,172" />
        <InkCanvas x:Name="Dr1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="250" Width="500">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
    </Grid>
</Window>